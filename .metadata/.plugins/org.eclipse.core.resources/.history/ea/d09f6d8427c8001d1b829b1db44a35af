//!criaremos um timer utilizando java
package pl01;

public class main {
	public static void main(String[] args) throws InterruptedException
	{
		int segundos, minutos, horas;
        segundos = 60;
        minutos = 00;
        horas = 24;
        
        while(horas>00){
            
            System.out.println("horas:"+horas+"minutos:"+minutos+"segundos:"+segundos);
            
            while(segundos>0) {
            	segundos--;
            }
            
        }
        
	}
}
