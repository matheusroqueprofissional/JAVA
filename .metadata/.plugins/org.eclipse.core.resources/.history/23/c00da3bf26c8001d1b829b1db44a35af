//!criaremos um timer utilizando java
package pl01;

public class main {
	public static void main(String[] args) throws InterruptedException
	{
		int segundos, minutos, horas;
        segundos = 00;
        minutos = 00;
        horas = 24;
        
        while(horas>00){
            segundos ++;
            System.out.println(segundos);
            
        }
	}
}
